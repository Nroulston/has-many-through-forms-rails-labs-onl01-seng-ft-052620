<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<% @post.comments.each do |comment| %>
  <%= comment.content %>
<% end %>
<% @post.users.distinct.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>

<%= form_for(@comment) do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
  <% end %>



